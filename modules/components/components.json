{
  "apache": {
    "category": "webserver",
    "package": "apache2"
  },
  "nginx": {
    "category": "webserver",
    "package": "nginx"
  },
  "mariadb": {
    "category": "database",
    "package": "mariadb-server"
  },
  "postgresql": {
    "category": "database",
    "package": "postgresql"
  },
  "phpmyadmin": {
    "category": "tools",
    "package": "phpmyadmin",
    "depends": ["php", "mariadb"]
  },
  "deno manager": {
    "category": "language",
    "install_cmd": "curl -fsSL https://dvm.deno.dev | sh",
    "check_path": "/root/.dvm/bin/dvm"
  },
  "node manager": {
    "category": "language",
    "install_cmd": "curl -fsSL https://fnm.vercel.app/install | bash",
    "check_path": "/root/.local/share/fnm/fnm"
  },
  "php": {
    "category": "language",
    "package": "php-fpm"
  },
  "postfix": {
    "category": "mail",
    "package": "postfix",
    "depends": ["dovecot"]
  },
  "dovecot": {
    "category": "mail",
    "package": "dovecot-imapd"
  },
  "roundcube": {
    "category": "mail",
    "package": "roundcube",
    "depends": ["php"]
  }
}