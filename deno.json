{
  "importMap": "import_map.json",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --allow-sys --allow-run --watch=--poll main.ts",
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --allow-sys --allow-run main.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true
  }
}
